{
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "./dist",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "noUnusedParameters": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "noImplicitAny": true,
      "strictPropertyInitialization": false,
      "outDir": "./dist",
      "target": "esnext",
      "jsx": "react",
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }